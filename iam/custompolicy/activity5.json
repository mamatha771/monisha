{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect" : "Allow",
            "Action": ["s3:*"],
            "Resource": ["*"],
            "Condition": {
                "StringEquals": {
                    "aws:RequestedRegion": "us-west-2"
                }
            }
        },
        {
            "Effect" : "Allow",
            "Action": ["s3:listBuckets", "s3:ListAllMyBuckets"],
            "Resource": ["*"]

        }
    ]
}